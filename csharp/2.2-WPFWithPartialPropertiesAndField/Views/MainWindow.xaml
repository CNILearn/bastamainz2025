<Window x:Class="CSharp14FieldKeywordWpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CSharp14FieldKeywordWpf.ViewModels"
        Title="C# 14 Field Keyword WPF MVVM Demo" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Styles for consistent UI -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5,5,5,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Converters -->
        <vm:CurrencyConverter x:Key="CurrencyConverter"/>
        <vm:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <vm:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <vm:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <vm:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="C# 14 Field Keyword MVVM Demo with CommunityToolkit.MVVM" 
                          FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Demonstrating ObservableProperty and RelayCommand attributes with source generation" 
                          FontSize="12" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- User List -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="10" CornerRadius="5,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="User List" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding UserCount, StringFormat='({0} users)'}" 
                                      Foreground="#666" FontSize="11" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- User ListBox -->
                    <ListBox Grid.Row="1" 
                            ItemsSource="{Binding Users}" 
                            SelectedItem="{Binding SelectedUser}"
                            Margin="5"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="2" Background="Transparent" CornerRadius="3">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter Property="Opacity" Value="0.6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <TextBlock Text="{Binding FullName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Email}" FontSize="11" Foreground="#666"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Salary, Converter={StaticResource CurrencyConverter}}" 
                                                      FontSize="11" Foreground="#2196F3"/>
                                            <TextBlock Text=" â€¢ " FontSize="11" Foreground="#666" Margin="3,0"/>
                                            <TextBlock Text="{Binding Age, StringFormat=\{0\} years}" 
                                                      FontSize="11" Foreground="#666"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- List Commands -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <Button Content="Add" Command="{Binding AddUserCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                        <Button Content="Refresh" Command="{Binding RefreshCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- User Details -->
            <Border Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                <Grid IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Details Header -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="10" CornerRadius="5,5,0,0">
                        <TextBlock Text="User Details" FontWeight="Bold"/>
                    </Border>

                    <!-- Form -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
                        <Grid>
                            <StackPanel DataContext="{Binding SelectedUser}">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <Label Content="First Name:"/>
                                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>

                                        <Label Content="Email:"/>
                                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                                        <Label Content="Salary:"/>
                                        <TextBox Text="{Binding Salary, UpdateSourceTrigger=PropertyChanged, StringFormat=C}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <Label Content="Last Name:"/>
                                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>

                                        <Label Content="Age:"/>
                                        <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"/>

                                        <Label Content="Last Login:"/>
                                        <TextBox Text="{Binding LastLoginDate, StringFormat=G}" IsReadOnly="True" Background="#F8F8F8"/>
                                    </StackPanel>
                                </Grid>

                                <CheckBox Content="Active User" IsChecked="{Binding IsActive}" Margin="5,15,5,5"/>

                                <!-- Info Panel -->
                                <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="5,10,5,5">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ’¡ CommunityToolkit.MVVM Benefits" FontWeight="Bold" Foreground="#1976D2"/>
                                        <TextBlock TextWrapping="Wrap" Margin="0,5,0,0" Foreground="#333">
                                            This form demonstrates properties using ObservableProperty attributes and commands using RelayCommand attributes. 
                                            Notice the cleaner code, automatic property generation, and improved maintainability with source generators.
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- No Selection Message -->
                            <Border Background="#FFF3E0" CornerRadius="5" Padding="20" Margin="15"
                                   Visibility="{Binding SelectedUser, Converter={StaticResource NullToVisibilityConverter}}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="No User Selected" FontSize="16" FontWeight="Bold" Foreground="#F57C00" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Select a user from the list to view and edit details" 
                                              Foreground="#F57C00" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ScrollViewer>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
                        <Button Content="Save" Command="{Binding SaveUserCommand}"/>
                        <Button Content="Delete" Command="{Binding DeleteUserCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" CornerRadius="5" Padding="10" Margin="0,10,0,0"
               Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <TextBlock Text="{Binding StatusMessage}" FontStyle="Italic"/>
        </Border>

        <!-- Loading Indicator -->
        <Border Grid.Row="3" Background="#FF9800" CornerRadius="5" Padding="10" Margin="0,5,0,0"
               Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ProgressBar Grid.Column="0" Width="20" Height="20" IsIndeterminate="True" Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" Text="Processing..." VerticalAlignment="Center" Foreground="White"/>
            </Grid>
        </Border>
    </Grid>
</Window>